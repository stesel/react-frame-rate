{
  "name": "react-frame-rate",
  "version": "1.1.1",
  "description": "Create smooth animation in React components with ~60FPS.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "author": "Leonid Trofymchuk <stesel23@gmail.com>",
  "license": "MIT",
  "homepage": "https://stesel.github.io/react-frame-rate-demo",
  "bugs": {
    "url": "https://github.com/stesel/react-frame-rate/issues"
  },
  "keywords": [
    "requestAnimatioFrame",
    "react",
    "smooth",
    "animation"
  ],
  "scripts": {
    "build": "rm -rf ./lib && tsc",
    "test": "jest",
    "lint": "tslint --project ./tsconfig.json",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "react": "^16.4.2"
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/jest": "^23.3.1",
    "@types/react": "16.0.38",
    "babel-loader": "^7.1.2",
    "babel-preset-react-app": "^3.1.1",
    "coveralls": "^3.0.2",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.0",
    "jest": "^23.5.0",
    "react-dom": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.2.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ],
    "coveragePathIgnorePatterns": [
      "test-preprocessor.js",
      "test-setup.js",
      "test-shim.js"
    ]
  }
}
